{% extends 'baseBack.html.twig' %}

{% block title %}Edit Evenement{% endblock %}

{% block body %}
    <div class="container-xxl flex-grow-1 container-p-y">

    <div style="display: flex;align-content: center ;justify-content: center ;margin-top: 50px;padding: 20px ">
        <div class="col-md-6">
            <div class="card mb-4">
                <h5 class="card-header">Creation une Publication</h5>
                {{ form_start(form) }}
                <div class="card-body">
                    <div>
                        <div class="mb-3 row">
                            <label for="html5-date-input" class="col-md-2 col-form-label">Nom:</label>
                            <div class="col-md-10">
                                {{ form_widget(form.nomevent,{'attr':{'class':'form-control'}})}}
                            </div>
                        </div>


                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Prix :</label>
                        {{ form_widget(form.prixevent,{'attr':{'class':'form-control'}})}}

                    </div>

                    <div>
                        <label for="defaultFormControlInput" class="form-label">Date :</label>
                        {{ form_widget(form.date,{'attr':{'class':'form-control'}})}}

                        <div class="row mb-3" style="margin-left: 250px">

                            <div class="col-sm-10" style="margin-top: 30px">
                                <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
                                <a type="submit" class="btn btn-primary" style="margin-top: 10px"  href="{{ path('app_evenement_back_index') }}">retour</a>
                                {{ include('evenement_back/_delete_form.html.twig') }}
                            </div>


                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>




{% endblock %}