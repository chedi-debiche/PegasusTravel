{% extends 'baseFront.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}
    {% form_theme form 'foundation_5_layout.html.twig' %}
    {{ form_start(form) }}
    <h1>Créer un nouveau évenement </h1>

    {{ include('evenement/_form.html.twig') }}

    <a type="submit" class="btn btn-primary" href="{{ path('app_evenement_index') }}">Ajouter a la liste</a>
    <div class="form-group">{{ form_row(form.nomevent) }}</div>
    <div class="form-group">{{ form_row(form.prixevent) }}</div>
    <div class="form-group">{{ form_row(form.date) }}</div>
    {{ form_end(form) }}

{% endblock %}
